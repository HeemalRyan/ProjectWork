<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
	<bean id= "paintsection" class="org.Heemal.Ryan.PaintSection">
		<property name= "Paint_Colour" ref= "PaintColour" />
		<property name= "Paint_Type" ref= "PaintType" />
		<property name= "Paint_Brand" >
			<bean class="org.Heemal.Ryan.PaintProperties">
				<property name = "Brand" value ="Ryan Paints"/>
			</bean>
		</property>
	</bean>
	
	<bean id= "PaintColour" class="org.Heemal.Ryan.PaintProperties"> 
		<property name="Colour" value= "Red"/>
	</bean>
	<bean id= "PaintType" class="org.Heemal.Ryan.PaintProperties"> 
		<property name="Type" value= "Gloss"/>
	</bean>
	
	
</beans> 